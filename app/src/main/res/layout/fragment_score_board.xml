<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    tools:context=".ScoreBoard">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="578dp"
        android:layout_height="333dp"
        android:clickable="true"
        android:src="@drawable/scoreboard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/closeBtn"
        android:layout_width="37dp"
        android:layout_height="34dp"
        android:background="#00FFFFFF"
        android:scaleType="centerCrop"
        android:src="@drawable/close"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.881"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.17" />

    <TableLayout
        android:layout_width="274dp"
        android:layout_height="146dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.657">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/player1Txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spieler 1"
                android:textSize="18sp" />

            <View
                android:id="@+id/view"
                android:layout_width="189dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/player1PointsTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/player2Txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spieler 2"
                android:textSize="18sp" />

            <View
                android:id="@+id/view2"
                android:layout_width="189dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/player2PointsTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/player3Txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spieler 3"
                android:textSize="18sp" />

            <View
                android:id="@+id/view3"
                android:layout_width="189dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/player3PointsTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="18sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/player4Txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spieler 4"
                android:textSize="18sp" />

            <View
                android:id="@+id/view4"
                android:layout_width="189dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/player4PointsTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="18sp" />
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>